# TMC Frontend Environment Variables
# Salin file ini menjadi `.env` untuk Docker Compose build dan
# opsi tambahan salin menjadi `.env.local` untuk pengembangan lokal Vite.

# API Configuration
VITE_API_URL=https://api.tmclub.id
VITE_API_VERSION=v1
VITE_APP_URL=http://localhost:5173
VITE_API_TIMEOUT=10000

# Google OAuth2 Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback

# Payment Gateway (Faspay)
VITE_FASPAY_API_URL=https://api.faspay.id
VITE_FASPAY_MERCHANT_ID=your-faspay-merchant-id
VITE_FASPAY_MERCHANT_SECRET=your-faspay-secret
VITE_FASPAY_ENVIRONMENT=sandbox

# App Configuration
VITE_APP_NAME=TMC Web App
VITE_APP_DESCRIPTION=Toyota Manufacturers Club - Community Management Platform
VITE_APP_VERSION=1.0.0
VITE_APP_SUPPORT_EMAIL=support@tmclub.id

# Feature Flags

# Nginx Port (optional override)
# Atur port HTTP Nginx untuk produksi (docker-compose)
NGINX_HTTP_PORT=80
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PAYMENT=true
VITE_ENABLE_QR_SCANNER=true

# Development
VITE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx